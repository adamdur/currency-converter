{
  "name": "momence-zadanie",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start:dev": "NODE_ENV=local supervisor --watch src/server -- -r 'babel-register-ts' src/server/index.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel ./src/server -d dist/server --copy-files --extensions .ts",
    "build:client": "webpack --config webpack/webpack.prod.js",
    "validate": "npm run type-check && npm run prettier-check && npm run lint && npm run test",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx,.json ./src ./test",
    "lint:fix": "eslint --ext .ts,.tsx,.json --fix ./src ./test",
    "prettier-check": "prettier --check \"src/**/*.{ts,tsx,scss}\"",
    "prettier-write": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
    "docker-create-image": "npm ci && npm run build && cross-var docker build -t \"duris/currency-converter:latest\" -t \"duris/currency-converter:$npm_package_version\" .",
    "docker-push-image": "npm run docker-create-image && docker push \"duris/currency-converter:latest\" && cross-var docker push \"duris/currency-converter:$npm_package_version\"",
    "docker-run-image": "docker run --rm -e NODE_ENV=local-docker -p 8000:8000 duris/currency-converter"
  },
  "author": "Adam Duris",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^5.15.14",
    "@tanstack/react-query": "^5.28.9",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^2.7.0",
    "pino": "^8.19.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@babel/register": "^7.23.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.91",
    "@types/node-fetch": "^2.6.11",
    "@types/pino": "^7.0.5",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "babel-register-ts": "^7.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-var": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.1",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "pino-pretty": "^11.0.0",
    "prettier": "3.2.5",
    "react-refresh": "^0.14.0",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "supervisor": "^0.12.0",
    "typescript": "^4.9.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.2.0",
    "webpack-dev-server": "^4.15.2",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-merge": "^5.10.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testRegex": "(\\.(test|spec))\\.ts(x?)$",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "transform": {
      ".(js|ts|tsx)$": "<rootDir>/test/babel-transformer.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "<rootDir>/test/jest.setup.js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./test-reports",
    "outputName": "./junit.xml"
  }
}
